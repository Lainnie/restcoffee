extends ../layout
block content
  h3#name #{product.name}
  h3#desc #{product.description}
  form#formEdit(method="post", action="/products/"+product._id)
    fieldset
      legend edit
        .clearfix
        label(for='name') name
          .input
            input(type="text", name="name")
        label(for='description') description
          .input
            input(type="text", name="description")	
          input(type='submit')
  button#deleteItem